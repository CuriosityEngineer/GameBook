<%= form_for @character do |f| %>
  <% if @character.errors.any? %>
    <div id="errors">
      <h2><%=pluralize(@character.errors.count, "error") %> prevented this post from saving</h2>
      <ul>
        <% @character.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>Avatar >> Empty for now</p>

  <p>
    Skill bonus<br>
    <ul>
      <li>+1 Fighting</li>
      <li>+1 Trickery</li>
      <li>+1 Action</li>
      <li>+1 Talking</li>
      <li>+1 Perception</li>
      <li>+1 Inner Strength</li>
    </ul>
    Equipment & Treasures
    <ul>
      <li>4 pennies & 1 shilling</li>
      <li>Whishbone</li>
      <li>Marble</li>
    </ul>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
